{
  "compilerOptions": {
    "target": "ES2024",
    "outDir": "./build",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
  },
  "files": [
    "./src/type.d.ts"
  ],
  "include": [
    "./src/**/*"
  ]
}